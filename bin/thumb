#! /usr/bin/bash

# This script required imagemagick to be installed
# This program converts the images in directory to thumbnails
# files are renamed to large_name and small_name

thumb_size=300
FILES="$@"

for i in $FILES
do
echo "Processing image $i ..."
/usr/bin/convert -thumbnail $thumb_size $i small_$i
mv $i large_$i
done
