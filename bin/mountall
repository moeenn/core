#! /bin/bash

# Check lsblk @ fresh install
files_id='/dev/sda3'
windows_id='/dev/sda2'

# Mountpoints and Addresses
mount_point="/media"
files_dir="$mount_point/files"
windows_dir="$mount_point/windows"
usb_dir="$mount_point/usb"

create_directories() {
	if [ ! -d $files_dir ]; then
		sudo mkdir $files_dir ;
	fi

	if [ ! -d $windows_dir ]; then
		sudo mkdir $windows_dir ;
	fi
	
	if [ ! -d $usb_dir ]; then
		sudo mkdir $usb_dir ;
	fi
	
	echo -en "[Done]  Directories\n";
}


# Mount The Partitions
mount_partitions() {
	sudo mount -o rw -v $files_id $files_dir ;
	echo -en "[Done] Files\n";

	sudo mount -o rw -v $windows_id $windows_dir ;
	echo -en "[Done] Windows\n";
}	

create_directories
mount_partitions
