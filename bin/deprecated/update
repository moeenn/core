#! /bin/sh

help() {
cat << EOF
[Error] Available options are keys and db.
EOF
}

err() {
  echo "$1"
  exit 1
}

case $1 in
	db		)	[ -z "$1" ] && err "No argument specified"
				sudo pacman -Syy				;;
	keys	)	[ -z "$1" ] && err "No argument specified"
				sudo pacman-key --refresh-keys	;;
	*		)	[ -z "$1" ] && err "No argument specified"
				help							;;
esac
