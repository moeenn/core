#!/bin/bash
# NEW

IF="Master"         	# Audio Channel
SECS="1"            	# Display Timeout

BG="#1c1c1c"       		# Background color of window (deprecated)
FG="#6E6E6E"        	# Volume Icon Normal Color (deprecated)
BAR_FG="#31CDC3"    	# Volume bar fill color
BAR_BG="#2E333B"    	# Volume bar normal color
BAR_MUTE="#3A434B"		# Volume bar fill if mute

XPOS="583"        		# Horizontal position
YPOS="364" 	        	# Vertical position
HEIGHT="45"         	# Window Height
WIDTH="205"         	# Window Width
BAR_WIDTH="170"     	# Volume bar width


# Don't change this
PIPE="/tmp/dvolpipe"

err() {
  echo "$1"
  exit 1
}

usage() {
  echo "usage: dvol [option] [argument]"
  echo
  echo "Options:"
  echo "     -i, --increase - increase volume by \`argument'"
  echo "     -d, --decrease - decrease volume by \`argument'"
  echo "     -t, --toggle   - toggle mute on and off"
  echo "     -h, --help     - display this"
  exit
}


# Parcing Arguments
case "$1" in
  '-i'|'--increase')
			[ -z "$2" ] && err "No argument specified for increase."
			[ -n "$(tr -d [0-9] <<<$2)" ] && err "The argument needs to be an integer."
		AMIXARG="${2}%+"
    ;;
  '-d'|'--decrease')
			[ -z "$2" ] && err "No argument specified for decrease."
			[ -n "$(tr -d [0-9] <<<$2)" ] && err "The argument needs to be an integer."
		AMIXARG="${2}%-"
    ;;
  '-t'|'--toggle')
		AMIXARG="toggle"
    ;;
  ''|'-h'|'--help')
		usage
    ;;
  *)
		err "Unrecognized option"
    ;;
esac

# Actual volume changing (readability low)
AMIXOUT="$(amixer set "$IF" "$AMIXARG" | tail -n 1)"
MUTE="$(cut -d '[' -f 4 <<<"$AMIXOUT")"
VOL="$(cut -d '[' -f 2 <<<"$AMIXOUT" | sed 's/%.*//g')"
if [ "$MUTE" = "off]" ]; then
	#label=" 0"
	BAR_FG=$BAR_MUTE
  #else
  #	label="$VOL"
fi


if [ ! -e "$PIPE" ]; then
  mkfifo "$PIPE"
  (dzen2 -tw "$WIDTH" -h "$HEIGHT" -x "$XPOS" -y "$YPOS" -ta left < "$PIPE"
   rm -f "$PIPE") &
fi

# Feed into the pipe
# $VOL %
(echo "$VOL" | gdbar -l "   " -fg "$BAR_FG" -bg "$BAR_BG" -w "$BAR_WIDTH" -h "15" -ss "3" -sw "7" ; sleep "$SECS") > "$PIPE"
