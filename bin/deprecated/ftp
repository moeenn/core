#! /bin/sh

install() {
	sudo pacman -S vsftpd
}

help() {
	echo "Usage: ftp [start | stop | status | help]"
}

if [ -f '/usr/bin/vsftpd' ]; then
		case $1 in
			status ) 	systemctl status vsftpd.service		;;
			start  )	systemctl start vsftpd.service		;;
			stop   )	systemctl stop vsftpd.service		;;
			help   )    help								;;
			*	   )	help								;;
		esac
	else
		install
fi

