#! /bin/sh

clean_desk() {
	killall -v tint2 conky plank nm-applet volumeicon
}

pacman_opt() {
	# XferCommand  = /usr/bin/wget -c -q --show-progress -4 -E --passive-ftp -O %o %u
	sudo nano /etc/pacman.conf

    sudo pacman -Syy --noconfirm
    sudo pacman-key --refresh-keys

	if [ ! -f /usr/bin/reflector ];then
		echo "Installing Reflector..."
		sudo pacman -S reflector --noconfirm
		echo "Fetching new Mirrorlists..."
		sudo reflector -l 30 -f 10 --save /etc/pacman.d/mirrorlist
		sudo pacman -Syy --noconfirm
		echo "Pacman Mirrors Successfully Optimized!"
	else
		echo "Fetching new Mirrorlists..."
		sudo reflector -l 30 -f 10 --save /etc/pacman.d/mirrorlist
		sudo pacman -Syy --noconfirm
		echo "Pacman Mirrors Successfully Optimized!"
	fi
}

pacman_keys() {
	sudo pacman-key --init
	# keyserver hkp://pgp.mit.edu
	sudo nano /etc/pacman.d/gnupg/gpg.conf
}

dirmngr() {
	# run as root (su)
	dirmngr </dev/null
}

memtest() {
    sudo rm -r /boot/memtest86+/
    sudo grub-mkconfig -o /boot/grub/grub.cfg
    echo "Memtest Patch Applied!"
}

git_set() {
	cd /home/moeen/Downloads
	git clone https://github.com/moeenn/Backup
	cd ./Backup/
	cp -vrf ./* /home/moeen/
	cd /home/moeen/
}
