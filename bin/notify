#! /bin/sh

bg="^bg(#FF8700)^fg(#000000)"
notif="  // Task Completed //"
dzen="dzen2 -geometry 200x40+583+340 -ta left"

if [ -z $1 ]; then
	( echo "$bg ^bg()^fg()    $notif    "; sleep 5s ) | $dzen
fi

case $1 in
	[0-9]|[0-9][0-9]	)	sleep $(concalc "60*$1");
							( echo "$bg ^bg()^fg()    $notif    "; sleep 5s ) | $dzen	;;

	[a-z]|[A-Z]			)	echo "Argument needs to be a number"
							echo "Usage: notify (after) [minutes]"
							exit 1	;;
esac
