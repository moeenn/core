<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/                 file:///usr/share/openbox/menu.xsd">
	<menu id="root-menu" label="Menu">
		<item label="  Web _">
			<action name="Execute">
				<execute>firefox</execute>
			</action>
		</item>
		<item label="  Terminal                                _">
			<action name="Execute">
				<execute>urxvt</execute>
			</action>
		</item>
		<item label="  Media _">
			<action name="Execute">
				<execute>mpv</execute>
			</action>
		</item>
		<item label="  Files _">
			<action name="Execute">
				<execute>pcmanfm</execute>
			</action>
		</item>
		<separator/>
		<!-- This requires the presence of the 'menu' package to work -->
		<item label="  Wallpaper_">
			<action name="Execute">
				<execute>nitrogen</execute>
			</action>
		</item>
		<item label="  Theme _">
			<action name="Execute">
				<execute>lxappearance</execute>
			</action>
		</item>
		<separator/>
		<item label="  Menu _">
			<action name="Execute">
				<execute>obmenu</execute>
			</action>
		</item>
		<item label="  Reset _">
			<action name="Execute">
				<execute>openbox --restart</execute>
			</action>
		</item>
		<separator/>
		<item label="  Lock _">
			<action name="Execute">
				<execute>i3lock -c 000000 -d</execute>
			</action>
		</item>
		<item label="  Exit _">
			<action name="Execute">
				<execute>openbox --exit</execute>
			</action>
		</item>
		<separator/>
		<item label="  Shutdown _">
			<action name="Execute">
				<execute>lxsession-logout</execute>
			</action>
		</item>
	</menu>
</openbox_menu>
